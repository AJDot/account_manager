<%= render 'shared/content_title', title: 'Accounts' %>

<div class="btn-group">
  <%= link_to "Create New Account", new_account_path, class: "btn btn-success" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Balance</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |acc| %>
      <tr>
        <td><%= acc.name %></td>
        <td><%= acc.kind %></td>
        <td><%= acc.balance %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'View', account_path(acc), class: "btn btn-success" %>
            <%= link_to 'Edit', edit_account_path(acc), class: "btn btn-primary" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
