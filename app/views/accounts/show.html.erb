<%= render 'shared/content_title', title: @account.name, subtitle: @account.kind.capitalize %>

<div class="btn-group" role="group">
  <%= link_to 'New Transaction', new_account_transaction_path(@account), class: 'btn btn-success' %>
  <%= link_to 'Edit Account', edit_account_path(@account), class: 'btn btn-primary' %>
  <%= link_to 'Back to All Accounts', accounts_path, class: 'btn btn-warning' %>
</div>

<h3>Transactions</h3>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @account.transactions.each do |trans| %>
      <tr>
        <td><%= trans.kind %></td>
        <td><%= trans.kind %></td>
        <td><%= trans.amount %></td>
        <td>
          <%= link_to 'Edit', edit_account_transaction_path(@account, trans), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
