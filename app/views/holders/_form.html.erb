<%= form_for @holder do |f| %>
  <div class="form-field-container">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-field-container">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="form-field-container">
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Register", class: 'btn btn-main' %>
<% end %>
